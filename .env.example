# --- Server ---
PORT=3000

# --- MongoDB (Atlas SRV URI) ---
# Example: mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/invtracker?retryWrites=true&w=majority
MONGODB_URI=

# --- Sessions ---
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# --- Google OAuth (Cloud Console -> OAuth 2.0 Client IDs) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Local dev callback:
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# --- Frontend origin (for CORS & cookies) ---
# If your frontend is on a different origin, set it (e.g., Vite default below).
# If you have NO separate frontend, leave it blank to use SameSite=Lax cookies.
FRONTEND_ORIGIN=http://localhost:3000
